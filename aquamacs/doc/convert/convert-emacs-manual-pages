#!/usr/bin/perl

foreach my $f (@ARGV)
{ open F, $f;
$x=join("", <F>);
close F;
# [34] needed for a bug in the manuals
 if ( $x =~ /Untitled(.*?<h[1234][^>]+>(.*?)<\/h[123456]>)/ism)
{
  my $r = $2;
  $r =~ s/<\/?[a-z]+>//isg;
  $x =~ s/Untitled/$r/isg;
}

$x =~ s|<style[^>]*></style>||si;  # appease Apple Help

open F, ">$f";
print F $x;
close F;
}
